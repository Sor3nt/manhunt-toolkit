SCRIPTMAIN ObjectScript;

ENTITY

Gen_Sec_Cam01 :	et_name;

VAR

i	: integer;

SCRIPT OnCreate;

BEGIN
RotateEntityLeft(this,45);

WHILE TRUE DO
	BEGIN
	
		FOR i := 1 TO 90 DO
			BEGIN
			sleep(1);
			RotateEntityLeft(this,-1);
			END;
		
		sleep(3500);
		
		FOR i := 1 TO 90 DO
			BEGIN
			sleep(1);
			RotateEntityLeft(this,1);
			END;
		
		sleep(3500);
		
	END;
END;

END.
SCRIPTMAIN GunHunterScript;

ENTITY
GUN12	:	et_name;

VAR
levelstatus	:	level_var integer;

SCRIPT OnCreate;
BEGIN
AIAddEntity(GetEntityName(this));

{IDENTITY}
AISetEntityVoiceID(GetEntityName(this),VOICE_SMILEY1VOICE1);
SetHunterSkin(this,2);
SetHunterHeadSkin(this,0);

IF levelstatus = 2 THEN RunScript(GetEntityName(this),'StartAI');
END;


SCRIPT StartAI;
VAR
direction	: Vec3D;

BEGIN
AIAddHunterToLeaderSubpack('LEADER','subGunArea6',GetEntityName(this));

AISetHunterIdlePatrol(GetEntityName(this),AISCRIPT_IDLE_PATROL,AISCRIPT_HIGHPRIORITY,2000,2001,'gun12path');
	
SetVector(direction,-0.5,0.0,0.9);
AISetIdlePatrolStopDirection(GetEntityName(this),'gun12stop1',6,TRUE,direction);
	
SetVector(direction,-0.9,-0.1,-0.3);
AISetIdlePatrolStopDirection(GetEntityName(this),'gun12stop2',6,TRUE,direction);
END;


SCRIPT OnHighSightingOrAbove;
BEGIN
RunScript('player','SeenPlayer');
RemoveThisScript;
END;


SCRIPT OnDeadBodyFound;
BEGIN
RunScript('player','SeenBody');
RemoveThisScript;
END;


SCRIPT Alert;{REMOVE PATROL ADD WANDER}
BEGIN
AIIgnoreEntityIfDead(GetEntityName(this));
AICancelHunterIdleAction(GetEntityName(this),AISCRIPT_IDLE_PATROL);
AISetHunterIdleActionMinMaxRadius(GetEntityName(this),AISCRIPT_IDLE_WANDERSEARCH,AISCRIPT_HIGHPRIORITY,300,300,-1);
RemoveThisScript;
END;

SCRIPT OnDeath;
BEGIN
RunScript('player','RemoveNewGoal');
END;

END.

